<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/beerImageViewID"
                android:layout_width="141dp"
                android:layout_height="200dp"
                android:paddingTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <TextView
                android:id="@+id/beerNameViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Beer Name"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/beerImageViewID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alcViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Alc : 4,5%"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageViewID"
                app:layout_constraintTop_toBottomOf="@+id/beerNameViewID" />

            <TextView
                android:id="@+id/ibuViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="IBU : 60"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageViewID"
                app:layout_constraintTop_toBottomOf="@+id/alcViewID" />

            <TextView
                android:id="@+id/yeastViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Yeast: US-05"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageViewID"
                app:layout_constraintTop_toBottomOf="@+id/ibuViewID" />

            <TextView
                android:id="@+id/firstBrewedID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="First brewed: 04/2007"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageViewID"
                app:layout_constraintTop_toBottomOf="@+id/yeastViewID" />
        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Description:"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionViewID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Donec dignissim rhoncus enim, mollis pulvinar dui accumsan eget. Ut vehicula odio sed orci interdum, vel sodales diam maximus. Fusce ac ante leo. Praesent sit amet hendrerit leo. Nullam id nisl ut orci malesuada lobortis. Mauris euismod egestas sapien, sit amet laoreet felis egestas eget. Nullam tincidunt et risus ut hendrerit. "
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/foodPairing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Food pairing: "
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionViewID" />

            <TextView
                android:id="@+id/foodPairingViewID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Donec dignissim rhoncus enim, mollis pulvinar dui accumsan eget. Ut vehicula odio sed orci interdum, vel sodales diam maximus. Fusce ac ante leo."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodPairing" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</ScrollView>